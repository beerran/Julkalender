@import 'jeet'
@import 'variables.styl'
@import 'specific.styl'
@import 'nav.styl'
@import 'calendar.styl'
@import 'alert.styl'
@import 'forms.styl'
@import 'admin.styl'

@import url(https://fonts.googleapis.com/css?family=Raleway:400,300,500,700,700italic,500italic,400italic);

body,html {
    margin: 0;
    overflow-x: hidden;
}

body {
    background: url('/assets/bg.jpg') no-repeat #fff;
    background-position: center navbar-height;
    font-family: 'Raleway', sans-serif;
    font-size:14px;
    font-weight:400;
}

p {
  font-size:1.1em;
  margin:10px 0;
  line-height:1.6em;
}

h1, h2, h3, h4 {
  font-size:1.8em;
  font-weight: 500;
  margin:10px 0;

  &.borders {
    border-top: 1px solid gray-lighter;
    border-bottom: 1px solid gray-lighter;
    padding:10px 0;
  }

  &.huge {
    font-size:2.8em;
  }

  &.margin {
    margin:20px 0;
  }
}

h2 {
  font-size: 1.6em;
}

h3 {
  font-size: 1.4em;
}

h4 {
  font-size: 1.2em;
}

a {
  color: green;
  text-decoration: none;
  &:hover {
    color: blue;
  }
}

a, button, input[type="submit"] {
    transition: all 300ms ease-out;
    outline: none;
}

.container {
    center(1300px)

    +below(tablet-size) {
      center(mobile-size)
    }
}

.content {
    column(7/9)
    +below(tablet-size) {
      column(1/1)
    }
}

.center {
  center()
}

.center-text {
  text-align: center;
}

.activity-stream {
  column(2/9)
  +below(tablet-size) {
    column(1/1)
  }

  .activity-list {
    .activity {
      stack()
      background: rgba(255,255,255, 0.33);
      position: relative;
      padding:10px 0;
      margin-bottom:10px
      border-radius:1em;
      box-shadow:0px 3px 3px gray-lighter;
      overflow: hidden;

      .close {
        position:absolute;
        bottom:5px;
        right:5px;
        border-bottom-right-radius: 0.5em;
        background: red-light;
        border:none;
        font-weight: 600;
        &:hover {
          background: red;
          cursor: pointer;
        }
      }

      &:last-child {
        margin-bottom:0;
      }
        .created-at {
            position: absolute;
            top: 8px;
            right: 10px;
            font-size:0.8em;
            color: green;
        }
        p {
          display:block;
          stack()
          padding-left:10px;
          line-height: normal;
        }
        .content {
          font-size:0.8em;
        }
    }
  }
}

.col-1-3 {
  col(1/3)
  +below(tablet-size) {
    col(1)
    margin-bottom:20px;
  }
  +above(tablet-size) {
    &.offset {
      col(1/3, 1/3)
    }
  }
}

.col-2-3 {
  col(2/3)
  +below(tablet-size) {
    col(1)
    margin-bottom:20px;
  }
  +above(tablet-size) {
    &.offset {
      col(2/3, 1/3)
    }
  }
}

.col-full {
  col(1)
}

::selection {
    color: green-lighter;
    background: green;
}

#iron-router-progress {
  background-color: green-light;
}

#iron-router-progress.spinner:before {
  border: 3px solid green;
}

.shadow {
    box-shadow: 3px 3px 3px gray-light;
}

.panel {
    span(1)
    box-shadow: 3px 3px 3px gray-light;
    border-top-left-radius: 0.5em;
    border-top-right-radius: 0.5em;

    background:#fff;

  p {
    position:relative;
    padding:10px 20px;
    z-index:10;
  }

  .solvedPlaceholder {
    width:60px;
    height:2px;
    display:inline-block;
  }

  .solvedText {
    &.isSolved {
      &:before {
        content: url('/assets/Besvart_2x.png');
        margin-left:20px;
        opacity: 0.5;
        }
        span {
          left: 80px;
          color: green;
          font-weight: 600;
        }
    }
    display:block;
    height:20px;
    font-size:1.2em;
    position:relative;
    z-index:1;
    span {
      position:absolute;
      top:10px;
      left:20px;
      color: red;
      font-weight: 600;
    }
  }
}

.answer {
  span(1)

  p#answer, p#inactiveAnswer, p#login {
    padding-left:20px;
    color:#fff;
    font-weight:600;
    font-size:1.1em;
    a {
      color: black;
    }
  }
  box-shadow: 3px 3px 3px gray-light;
  border-bottom-left-radius: 0.5em;
  border-bottom-right-radius: 0.5em;
  position:relative;
  background: purple;
  padding:20px 0;
}

.reveal {
  span(0.8/4, 0.1/4)
  box-shadow: 3px 3px 3px gray-light;
  background:green-light;
  border-bottom-left-radius: 0.5em;
  color:#fff;
  font-size:1em;
  font-weight: 600;
  text-align: center;
  color:green-dark;
  &:hover {
    cursor: pointer;
    background: green;
    color: green-light;
  }
}
.revealPlaceholder {
  span(0.8/4, 0.1/4)
  height:2px;
}

.extras {
  span(2/4)
  box-shadow: 3px 3px 3px gray-light;
  border-bottom-left-radius: 0.5em;
  border-bottom-right-radius: 0.5em;

  .stats {
    padding-top:10px;
    span(1/2)
    height:40px;
    background:gray-lighter;
    text-align:center;
    span {
      font-weight:600;
      color:black;
    }
    &:first-child {
      border-bottom-left-radius: 0.5em;
    }

    &:last-child {
      border-bottom-right-radius: 0.5em;
    }
  }
}

.closing {
  span(1/4)
  box-shadow: 3px 3px 3px gray-light;
  background:blue-light;
  border-bottom-right-radius: 0.5em;
  color:#fff;
  font-size:0.8em;
  text-align: center;
  color:blue-dark;
}

.clear {
  clear: both;
}
