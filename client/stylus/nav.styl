@import 'variables.styl'

nav {
  background:white;
  width:100%;
  height:navbar-height;
  margin-bottom:20px;
  border-bottom:1px solid gray-lighter;
}

.nav-header {
  height:navbar-height;
  line-height:navbar-height;
  span(3/12)

  a:hover {
    text-decoration: none;
  }

  .navbar-logo {
    position:relative;
    top:8px;
  }

  .navbar-brand {
    display:inline;
    margin-left:20px;
    font-size:1.2em;
    font-weight:700;
    color:black;
  }

  +below(tablet-size) {
    span(4/6)
  }

  +below(mobile-size) {
    span(4/6, 1/6)
  }
}

.navbar-toggle {
  position:relative;
  z-index:99;
  +below(tablet-size) {
    span(1/6)
    height: 100%;
    display:block;
    i {
      display:block;
      width: navbar-height - 20px;
      height: navbar-height - 20px;
      margin-top: navbar-height - (navbar-height - 10px);
      background: white;
      color: black;
      border: 1px solid gray-lighter;
      border-radius: 0.2em;
      font-size: 2em;
      text-align:center;
      line-height: navbar-height - 20px;
      &:hover {
        background: gray-lighter;
        cursor:pointer;
      }
      outline:none;
    }
  }

  display:none;
}

.navbar-nav {
  padding:0;
  margin:0;
  list-style: none;

  +above(tablet-size) {
    .navbar-title {
      display:none;
    }
    span(9/12)
    li {
      display:inline-block;
      height:navbar-height;
      line-height: navbar-height;
      margin-right:20px;
      &:last-child {
        margin-right:0;
        a {
          color: green;
          &#signOut {
            color: red-dark;
          }
        }
      }
      a {
        font-size:1.2em;
        font-weight:600;
        padding:20px;
        color:black;

        &:hover {
          color:gray-dark;
        }
        &.active {
          color:white;
          background:url('../top-nav-brush.svg') no-repeat center center;
          background-size:100% 60%;
        }
      }
      &:nth-child(2n) a.active {
        background-image:url('../top-nav-brush-2.svg');
      }
    }
  }

  +below(tablet-size) {
    display: none;
    span(2/6)
    position:fixed;
    height:100%;
    top:0;
    left:0;
    background:white;
    z-index:999;
    border-right: 1px solid gray-lighter;
    box-shadow: 1px 0 10px gray-light;
    li a {
      stack()
      letter-spacing: 3px;
      text-align:center;
      font-size:1.4em;
      color:blue;
      padding:10px 0;
      border-bottom:1px solid lighten(gray-lighter, 50%);
      &:hover {
        background:gray-lighter;
      }
    }
    li.navbar-title {
      img {
        position:absolute;
        left:20px;
        top:12px;
      }
      text-align:right;
      font-size:2em;
      color:black;
      padding-right:20px;
      padding-bottom:10px;
      margin:10px 0 0;
      border-bottom:1px solid gray-lighter;
      i {
        cursor:pointer;
      }
    }
  }
    +below(mobile-size) {
      span(4/6)
    }
}
